                            'index' => $v['baidu_index_pc'],
                            'index_m' => $v['baidu_index_m'],
                            'op_id' => $k1,
                            'url' => $v1['url_pc'],
                            'url_m' => $v1['url_m'],
                            'rank' => $v1['rank_pc'],
                            'rank_m' => $v1['rank_m'],
                        ];
                        Db::table('keywords_crawl_log')->insert($kcl);
