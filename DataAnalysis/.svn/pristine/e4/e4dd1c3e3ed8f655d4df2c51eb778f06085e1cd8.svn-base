<template>
  <div>
    <script id="editor" type="text/plain" style="width:100%;height:100px;"></script>
  </div>
</template>

<script>
  export default {
    name: 'UE',
    data () {
      return {
        editor: null
      }
    },
    props: {
      requestUeMsg: {
        type: Boolean,
        default: false
      },
      defaultMsg: {
        type: String,
        default: 'welcome to here!'
      },
      config: {
        type: Object
      }
    },
    watch: {
      requestUeMsg () {
        this.getUEContent()
      }
    },
    mounted() {
      const _this = this;
      this.editor = UE.getEditor('editor', this.config); // 初始化UE
      this.editor.addListener("ready", function () {
        _this.editor.setContent(_this.defaultMsg); // 确保UE加载完成后，放入内容。
      })
    },
    destroyed () {
      this.editor.destroy()
    },
    methods: {
      getUEContent () { // 获取内容方法
        this.$emit('getUeMsg', this.editor.getContent())
      }
    }
  }
</script>
